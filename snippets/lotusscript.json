{
    "Function Template": {
        "prefix": "Function",
        "body": [
            "Function ${1:functionName}(${2:arguments}) As ${3:returnType}",
            "   $0",
            "End Function"
        ],
        "description": "Template for a LotusScript function that takes a string parameter and returns a string."
    },
    "Subroutine Template": {
        "prefix": "Sub",
        "body": [
            "Sub ${1:subName}${2:(${3:arguments})}",
            "   $0",
            "End Sub"
        ],
        "description": "Template for a simple LotusScript subroutine."
    },
    "Variable Declaration": {
        "prefix": "Dim",
